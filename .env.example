# ============================================
# Backend Connection (REQUIRED)
# ============================================
# For local development:
VITE_SOCKET_BASE=ws://localhost:8000/ws
VITE_SOCKET_VOICE=ws://localhost:8000/ws/audio
VITE_API_BASE_URL=http://localhost:8000

# For production (Railway), use:
# VITE_SOCKET_BASE=wss://your-app.up.railway.app/ws
# VITE_SOCKET_VOICE=wss://your-app.up.railway.app/ws/audio
# VITE_API_BASE_URL=https://your-app.up.railway.app

# ============================================
# Widget Configuration (REQUIRED)
# ============================================
VITE_WIDGET_ID=your-widget-id-here

# ============================================
# ArcGIS Configuration (REQUIRED)
# ============================================
# Get API key from: https://developers.arcgis.com/
VITE_ARCGIS_API_KEY=your_arcgis_api_key_here

# Default web map to load
VITE_DEFAULT_WEBMAP_ID=your_webmap_id_here

# Curated layers group ID
VITE_CURATED_LAYERS_ID=your_curated_layers_group_id

# Living Atlas group ID (default provided)
VITE_ARCGIS_LIVING_ATLAS_ID=47dd57c9a59d458c86d3d6b978560088

# ============================================
# Error Tracking - Sentry (OPTIONAL)
# ============================================
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_ENABLE_SENTRY=false
VITE_SENTRY_ENV=dev

# ============================================
# Application Settings
# ============================================
VITE_APP_ENV=dev
